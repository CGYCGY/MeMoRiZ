<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/quiz_mcq_base">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qm_question_no"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="1"
            android:textSize="36sp"
            android:lines="2"
            android:minLines="1"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/qm_question"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Quiz Question"
            android:textSize="36sp"
            android:lines="2"
            android:minLines="1"
            android:maxLines="2"/>

        <RadioGroup
            android:id="@+id/qm_choices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <RadioButton
                android:id="@+id/qm_choice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choice 1"/>

            <RadioButton
                android:id="@+id/qm_choice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choice 2"/>

            <RadioButton
                android:id="@+id/qm_choice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choice 3"/>

            <RadioButton
                android:id="@+id/qm_choice4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choice 4"/>

        </RadioGroup>


    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/flashcard_mode1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mode1_card1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="word"
                android:textSize="40sp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/mode1_card2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="word"
                android:textSize="40sp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flashcard_mode2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/mode2_image1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:contentDescription="image 1"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"/>

            <ImageView
                android:id="@+id/mode2_image2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:contentDescription="image 1"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flashcard_mode3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/mode3_image1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:contentDescription="image 1"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"/>

            <TextView
                android:id="@+id/mode3_card2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="word"
                android:textSize="40sp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flashcard_mode4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/mode4_card1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="word"
                android:textSize="40sp"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/mode4_image2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:contentDescription="image 1"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
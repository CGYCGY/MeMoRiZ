<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/register_type"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>

        <EditText
            android:id="@+id/register_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_roundcorner_white"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/register_userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/layout_roundcorner_white"
            android:ems="10"
            android:hint="User Email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/register_userPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/layout_roundcorner_white"
            android:ems="10"
            android:hint="User Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <info.hoang8f.widget.FButton
                fbutton:fButtonColor="@color/fbutton_color_amethyst"
                fbutton:shadowColor="@color/fbutton_color_wisteria"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="15dp"
                android:id="@+id/register_registerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_centerInParent="true"
                android:text="@string/register"
                android:clickable="false" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
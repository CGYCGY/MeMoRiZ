<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.StudentMainMenu"
    android:background="@drawable/background_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <info.hoang8f.widget.FButton
            android:id="@+id/studentProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/student_main_menu_margin_vertical"
            android:layout_marginLeft="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginRight="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginTop="@dimen/student_main_menu_margin_vertical"
            android:layout_weight="1"
            android:text="Profile"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="15dp"/>

        <info.hoang8f.widget.FButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginRight="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginTop="@dimen/student_main_menu_margin_vertical"
            android:layout_marginBottom="@dimen/student_main_menu_margin_vertical"
            android:layout_weight="1"
            android:text="Flashcard"
            android:id="@+id/studentFlashcardBtn"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="15dp" />

        <info.hoang8f.widget.FButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginRight="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginTop="@dimen/student_main_menu_margin_vertical"
            android:layout_marginBottom="@dimen/student_main_menu_margin_vertical"
            android:layout_weight="1"
            android:text="Question"
            android:id="@+id/studentQuestionBtn"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="15dp" />

        <info.hoang8f.widget.FButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginRight="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginTop="@dimen/student_main_menu_margin_vertical"
            android:layout_marginBottom="@dimen/student_main_menu_margin_vertical"
            android:layout_weight="1"
            android:text="Report"
            android:id="@+id/studentReportBtn"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="15dp" />

        <info.hoang8f.widget.FButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginRight="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginTop="@dimen/student_main_menu_margin_vertical"
            android:layout_marginBottom="@dimen/student_main_menu_margin_vertical"
            android:layout_weight="1"
            android:text="Class"
            android:id="@+id/studentClassBtn"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="15dp" />

        <info.hoang8f.widget.FButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginRight="@dimen/student_main_menu_margin_horizontal"
            android:layout_marginTop="@dimen/student_main_menu_margin_vertical"
            android:layout_marginBottom="@dimen/student_main_menu_margin_vertical"
            android:layout_weight="1"
            android:text="Chat"
            android:id="@+id/studentStudentsHallBtn"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="15dp"/>

    </LinearLayout>

</FrameLayout>